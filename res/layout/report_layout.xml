<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7F7F7" >

    <FrameLayout
        android:id="@+id/title_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_back" >

        <ImageView
            android:id="@+id/setings_button"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="left"
            android:paddingLeft="05dip"
            android:paddingTop="07dip"
            android:src="@drawable/settings" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="30dip"
            android:layout_gravity="left"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="55dip"
            android:layout_marginTop="10dip"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:gravity="top|center"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:gravity="bottom|center"
            android:text="Powered by Metascan Online"
            android:textColor="#32B9D1"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_gravity="right"
            android:paddingRight="05dip"
            android:paddingTop="07dip"
            android:src="@drawable/home" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="30dip"
            android:layout_gravity="right"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="50dip"
            android:layout_marginTop="10dip"
            android:background="#FFFFFF" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/main_menu_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title_container"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/messageinbound_border"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/heading_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:text="Scan Report"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <ListView
            android:id="@+id/report_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="05dip"
            android:background="#F7F7F7"
            android:cacheColorHint="@android:color/transparent" >
        </ListView>
    </LinearLayout>

</RelativeLayout>